<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BokningsSystemMaui.Views.CancellationPage"
             Title="CancellationPage"
             >
    <VerticalStackLayout
        BindingContext="{Binding Booking}">

        <Label
            x:Name="BookingId"
            Text="{Binding Id}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            x:Name="WhenSession"
            Text="{Binding BookedWhen}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="RemoveBooking"
            Text="Ta bort bokning"
            Clicked="OnRemoveBookingClicked"/>
    </VerticalStackLayout>
</ContentPage>